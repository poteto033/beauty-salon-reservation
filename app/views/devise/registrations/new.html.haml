%h2 新規登録
= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
  = render "devise/shared/error_messages", resource: resource

  .field
    = f.label :ニックネーム
    %br/
    = f.text_field :nickname,autofocus: true

  .field
    = f.label :メールアドレス
    %br/
    = f.email_field :email, autocomplete: "email"

  .field
    = f.label :パスワード
    %br/
    = f.password_field :password, autocomplete: "new-password"
    
  .field
    = f.label :パスワード（確認用）
    %br/
    = f.password_field :password_confirmation, autocomplete: "new-password"

  .field
    = f.label :お名前
    %br/
    = f.text_field :first_name,placeholder: '姓'
    = f.text_field :last_name,placeholder:'名'

  .field
    = f.label :お名前（カナ）
    %br/
    = f.text_field :first_name_kana,placeholder:'姓（カナ）'
    = f.text_field :last_name_kana,placeholder:'名（カナ）'

  .field
    = f.label :性別
    %br/
    = f.select :gender, [["男","男"],["女","女"],["その他","その他"],["無回答","無回答"]],{include_blank: "選択してください"}

  .field
    = f.label :生年月日
    %br/
    = raw sprintf(f.date_select(:birthday, with_css_classes:'input_box-quarter', prompt:"選択してください", use_month_numbers: true, start_year: (Time.now.year - 70), end_year: (Time.now.year), default: Date.new(Time.now.year - 20, 4, 1), date_separator: '%s'), '年 ', '月 ') + '日'


 

    .actions
    = f.submit "登録する"

= render "devise/shared/links"
